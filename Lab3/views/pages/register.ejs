<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css">
    <title>Shortly</title>
</head>

<body>
    <header>
		<%- include('../partials/navbar'); %>
	</header>
    <div class="container-fluid h-100 bg-color">
        <div id="register">
            <div class="container">
                <div id="register-row" class="row h-100 justify-content-center align-items-center">
                    <div id="register-column" class="col-md-6">
                        <div id="register-box" class="col-md-12">
                            <form id="register-form" class="form" action="" method="post">
                                <h3 class="text-center register-header">Register</h3>
                                <div class="form-group">
                                    <label for="email" class="register-text-color">Email:</label><br>
                                    <input type="text" name="email" id="username" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="username" class="register-text-color">Username:</label><br>
                                    <input type="text" name="login" id="username" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="number" class="register-text-color">Phone number:</label><br>
                                    <input type="text" name="phoneNumber" id="password" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="password" class="register-text-color">Password:</label><br>
                                    <input type="text" name="pass" id="password" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="password" class="register-text-color">Confirm password:</label><br>
                                    <input type="text"  id="password" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputState" class="register-text-color">Select gender:</label><br>
                                    <select name="sex" class="form-select" aria-label="Default select example">
                                        <option selected>Another</option>
                                        <option value="1">Male</option>
                                        <option value="2">Female</option>
                                    </select>
                                </div>
                                
                                <div class="form-group">
                                    <button type="submit" class="btn btn-color btn-outline-light rounded-pill btn-md">Register</button>
                                </div>
                                <div id="register-link">
                                    <a href="login" class="register-text-color">Have account?</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/scripts'); %>
</body>

</html>